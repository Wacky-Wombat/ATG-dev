[
  {
    "property": "browser.tabs.groups.enabled",
    "type": "checkbox",
    "label": "Enable Tab Groups in the Zen Browser.",
    "default": "true",
    "force": "true"
  },
  {
    "property": "browser.tabs.groups.add-arrow",
    "type": "checkbox",
    "label": "Add an arrow icon for tab groups.",
    "default": "true",
    "conditions": [
      {
        "if": {
          "property": "browser.tabs.groups.style",
          "value": "none"
        }
      },
      {
        "if": {
          "property": "browser.tabs.groups.style",
          "value": "circle"
        }
      }
    ],
    "operator": "OR"
  },
  {
    "type": "separator",
    "label": "Style sets",
    "size": "var(--heading-font-size-medium)"
  },
  {
    "property": "browser.tabs.groups.style",
    "label": "Select a predefined style set:",
    "type": "dropdown",
    "placeholder": "Default",
    "options": [
      {
        "label": "Simple Circle",
        "value": "circle"
      },
      {
        "label": "Arc-like",
        "value": "arc"
      },
      {
        "label": "Edge-like",
        "value": "edge"
      },
      {
        "label": "[uc] Arc-like w flavor",
        "value": "arc+"
      }
    ]
  }
]
